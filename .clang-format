Language: Cpp

BasedOnStyle: WebKit
ColumnLimit: 80
AllowShortFunctionsOnASingleLine: false
IncludeBlocks: Regroup
IncludeCategories:
  # Project includes
  - Regex: '^"[a-zA-Z\._-]+(/[a-zA-Z0-9\._-]+)*"$'
    Priority: 1
  # Standard library includes
  - Regex: "^<[a-zA-Z_]+>$"
    Priority: 4
  # Third party library includes
  - Regex: "^<([a-zA-Z_0-9-]+/)*[a-zA-Z_0-9-]+.h(pp)?>$"
    Priority: 3
